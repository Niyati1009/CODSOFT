#include<iostream>
using namespace std;
int main(){
    int a,b;
    cout<<"Enter two numbers:- ";
    cin>>a>>b;
    char op;
    cout<<"Enter operation(+,-,*,/):- ";
    cin>>op;
    switch(op){
        case '+':
        cout<<"Addition of "<<a<<"and"<<b<<" is :- "<<a+b;
        break;
        case '-':
        cout<<"Subtration of "<<a<<"and"<<b<<" is :- "<<a-b;
        break;
        case '*':
        cout<<"Multiplication of "<<a<<"and"<<b<<" is :- "<<a*b;
        break;
        case '/':
        cout<<"Division of "<<a<<"and"<<b<<" is :- "<<a/b;
        break;
        default:
        cout<<"You entered a wrong operation";
    }
    return 0;
}
